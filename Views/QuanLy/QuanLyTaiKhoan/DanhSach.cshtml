@model IEnumerable<Users>

<h4>Hoạt Động</h4>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Họ Tên</th>
            <th>Email</th>
            <th>SĐT</th>
            <th>Địa Chỉ</th>
            <th>Giới Tính</th>
            <th>Ảnh</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model.Where(u => u.TrangThai == "Đang Hoạt Động"))
        {
            <tr>
                <td>@user.HoTen</td>
                <td>@user.Email</td>
                <td>@user.SDT</td>
                <td>@user.DiaChi</td>
                <td>@user.GioiTinh</td>
                <td><img src="@user.Image" width="50" height="50" /></td>
                <td>
                    <a href="/TaiKhoanQuanLy/ChinhSuaTaiKhoanView?id=@user.Id" class="btn btn-sm btn-warning">Sửa</a>
                    <form asp-action="XoaTaiKhoan" method="post" style="display:inline;" onsubmit="return confirm('Bạn chắc chắn muốn xóa?');">
                        <input type="hidden" name="id" value="@user.Id" />
                        <button type="submit" class="btn btn-sm btn-danger">Xóa</button>
                    </form>
                </td>

            </tr>
        }
    </tbody>
</table>

