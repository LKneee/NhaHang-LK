@model NhaHang.Models.Users
@{
    ViewData["Title"] = "Đăng Kí Tài Khoản";
    string vaiTro = ViewBag.VaiTro as string ?? "";
    string emailSuffix = vaiTro switch
    {
        "NhanVienPhucVu" => "@nvpv.com",
        "NhanVienBep" => "@nvb.com",
        "QuanLy" => "@admin.com",
        "KhachHang" => "@gmail.com",
        _ => "@default"
    };
}
<link rel="stylesheet" href="~/css/QuanLy/ThemTaiKhoan.css" />
<h2>Thêm tài khoản</h2>
<div class="menu-form-container">
    <form asp-action="ThemTaiKhoan" method="post">
        <input type="hidden" name="VaiTro" value="@vaiTro" />

        <div>
            <label>Họ tên</label>
            <input type="text" name="HoTen" required />
        </div>

        <div>
            <label>Giới tính</label>
            <select name="GioiTinh">
                <option value="Nam">Nam</option>
                <option value="Nữ">Nữ</option>
                <option value="Khác">Khác</option>
            </select>
        </div>

        <div>
            <label>Số điện thoại</label>
            <input type="text" name="SDT" required />
        </div>

        <div>
            <label>Email</label>
            <div style="display:flex; gap: 10px;">
                <input type="text" name="EmailPrefix" placeholder="Tên email" required style="flex: 1;" />
                <span style="align-self: center;">@emailSuffix</span>
            </div>
        </div>

        <div>
            <label>Mật khẩu</label>
            <input type="password" name="MatKhau" required />
        </div>

        <div>
            <label>Địa chỉ</label>
            <input type="text" name="DiaChi" required />
        </div>

        <button type="submit">Tạo Tài Khoản</button>
    </form>
</div>
